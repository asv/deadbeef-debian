gmepath=@top_srcdir@/gme/Game_Music_Emu-0.5.2

bin_PROGRAMS = deadbeef

deadbeef_SOURCES =\
	main.c common.h\
	callbacks.c interface.c support.c callbacks.h interface.h support.h\
	playlist.c playlist.h gtkplaylist.c gtkplaylist.h\
